{{#if isEditing}}
  {{partial 'post/edit'}}
  <button {{action 'doneEditing'}}>Done</button>
{{else}}
  <button {{action 'edit'}}>Edit</button>
{{/if}}

<h1>{{model.title}}</h1>

<h2>by {{model.author.name}}</h2>

<hr>

<div class="body">
  {{model.body}}
</div>

{{#each comment in model.comment}}
  {{post.comment}}
{{/each}}

{{#link-to 'new-comment' model.comment}}Comment on this post!{{/link-to}}

